{
    "compilerOptions":{
        "outDir": "dist", // 输出的目录
        "sourceMap": true, // 采用sourcemap
        "target": "es2016", // 目标语法
        "module": "esnext", // 模块格式
        "moduleResolution": "node", // 模块解折方式
        "strict": false, // 严格模式
        "resolveJsonModule": true, // 解折json模块
        "esModuleInterop": true, // 允许通过es6语法写引入commonjs摸块
        "jsx": "preserve", // jsx不转义
        "lib": ["esnext","dom"], // 支持的类库 1. 支持esnext 2. 支持dom
        "baseUrl": ".", // 基础目录
        "paths":{
            "@vue/*": ["packages/*/src"] // 路径映射
        }
    }
}    
